<%- include("template/head", {tituloWeb: 'Contacto'}) %>
<%- include("template/navbar") %>

    <h2 class="text-center pad"><%= titulo %></h2>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/send" method="POST">
                            <div class="form-group">
                                <input type="text" name="nombre" class="form-control" placeholder="Nombre">
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="tel" name="tel" class="form-control" placeholder="Telefono">
                            </div>
                            <div class="form-group">
                                <textarea name="msj" rows="2" class="form-control" placeholder="Mensaje"></textarea>
                            </div>
                            <button class="btn btn-primary">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include("template/footer") %>